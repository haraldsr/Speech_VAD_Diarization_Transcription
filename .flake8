[flake8]
max-line-length = 88
extend-ignore = E203, W503
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    ENV,
    build,
    develop-eggs,
    dist,
    downloads,
    eggs,
    .eggs,
    lib,
    lib64,
    parts,
    sdist,
    var,
    wheels,
    *.egg-info,
    .ipynb_checkpoints,
    .vscode,
    .idea,
    examples,
    outputs,
    interim,
    pretrained_models,
    natural-turn-transcription,
    speech_separation.ipynb,
    speech_separation_chunked.py,
    run_separation_and_pipeline.py,
    run_pipeline_only.py,
    .mypy_cache,
    .pytest_cache,
    .ruff_cache,
    .DS_Store,
    Thumbs.db,
    *.py[cod],
    *.so,
    .Python,
    .installed.cfg,
    *.egg,
    *.swp,
    *.swo,
    *~
per-file-ignores =
    __init__.py:F401
